{
  "name": "@browser.style/asset-server",
  "version": "1.0.0",
  "description": "Asset management server",
  "main": "server.js",
  "type": "module",
  "exports": {
    ".": {
      "import": "./server.js"
    },
    "./middleware": {
      "import": "./middleware/index.js"
    },
    "./controllers": {
      "import": "./controllers/index.js"
    }
  },
  "files": [
    "server.js",
    "app.js",
    "middleware/**/*",
    "controllers/**/*",
    "routes/**/*"
  ],
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "prod": "pm2 start ecosystem.config.js --env production",
    "stop": "pm2 stop ecosystem.config.js",
    "restart": "pm2 restart ecosystem.config.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "browser.style",
    "express",
    "asset-management",
    "file-upload",
    "web-components"
  ],
  "author": "Mads Stoumann",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-validator": "^7.2.1",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.33.5"
  },
  "devDependencies": {
    "nodemon": "^3.1.9",
    "pm2": "^5.3.1"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/madsstoumannasset-server.git",
    "directory": "/"
  },
  "bugs": {
    "url": "https://github.com/madsstoumann/asset-server/issues"
  },
  "homepage": "https://browser.style/ui/asset-handler"
}
